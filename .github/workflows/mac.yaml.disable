name: Tuner CI (Mac)

on: [push,pull_request]

jobs:
  build:
    runs-on: mac-latest

    steps:
    - uses: actions/checkout@v1
      with:
        fetch-depth: 1
        submodules: recursive

    - name: Setup
      working-directory: .
      run: mkdir build

    - name: Configure Cmake
      working-directory: ./build/
      run: cmake ..

    - name: Compile
      working-directory: ./build/
      run: make
      
    - name: Run Tests
      run: ./lib/ecu/test/ecu_tests
